<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:paddingBottom="20dp"
        android:text="Playlist Lagu"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Masukkan Judul Lagu : "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Masukkan Artis            : "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Masukkan Album            : "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Masukkan Tahun            : "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Masukkan Label            : "
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etLagu"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etArtis"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etAlbum"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etTahun"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etLabel"
                android:layout_width="200dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:id="@+id/btnSave"
                android:text="Save"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:id="@+id/btnShow"
                android:text="Show"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:id="@+id/btnDelete"
                android:text="Delete"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:id="@+id/btnUpdate"
                android:text="Update"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>